<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="12dp"
    android:elevation="4dp"
    android:background="@color/white"
    android:contentDescription="Pyq Card"
    android:id="@+id/pyq_list_cardview"
    tools:context=".PYQs.pyq_list_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- PyQ Icon -->
        <ImageView
            android:id="@+id/pyqImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/exam_icon"
            android:contentDescription="Pyq Icon"
            android:layout_centerVertical="true"/>

        <!-- PyQ Title Text -->
        <TextView
            android:id="@+id/pyqTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pyqImageView"
            android:layout_marginStart="18dp"
            android:text="Sample Item"
            android:fontFamily="monospace"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
